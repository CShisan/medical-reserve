.container {
  width: 100%;
  height: 100%;
}

.user-bar {
  border: 0px solid #fff !important;
}

.user-bar-username {
  margin-top: 15px;
  font-size: 16px;
  font-weight: 650;
}

.user-bar-uid {
  font-size: 12px;
  font-weight: 650;
  color: rgb(150, 150, 150);
}

.action-bar {
  margin: 20px 20px 0;
  padding: 10px 0;
  border: 1px solid rgb(219, 219, 219);
  border-width: 1px 0 0 0;
}

.action-bar-cell {
  margin-top: 10px;
  padding-left: 0 !important;
  padding-right: 0 !important;
}

.action-bar-item {
  font-size: 16px;
  vertical-align: middle;
}

.action-bar-item-icon {
  margin-right: 10px;
}
